

<selector xmlns:android="http://schemas.android.com/apk/res/android">


  <item android:state_pressed="false">
    <layer-list>
      <item android:right="2dp" android:top="2dp">
        <shape>
          <corners android:radius="5dp" />

          <solid android:color="#bdbdbd" />
        </shape>
      </item>



      <item android:bottom="2dp" android:left="2dp">
        <shape >
          <gradient android:angle="360" android:endColor="#ffffff" android:startColor="#d3d3d3" />

          <stroke android:width="1dp" android:color="#ffffff" />

          <corners android:radius="5dp" />

          <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
      </item>
    </layer-list>
  </item>



  <item android:state_pressed="true">
    <layer-list>
      <item android:right="3dp" android:top="3dp">
        <shape>
          <corners android:radius="5dp" />

          <solid android:color="#bdbdbd" />
        </shape>
      </item>


      <item android:top="5dp" android:right="5dp">
        <shape>
          <gradient android:angle="270" android:endColor="#d3d3d3" android:startColor="#ffffff" />

          <stroke android:width="1dp" android:color="#ffffff" />

          <corners android:radius="5dp" />

          <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
      </item>
    </layer-list>
  </item>
 
</selector>





