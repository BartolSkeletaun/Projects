

<selector xmlns:android="http://schemas.android.com/apk/res/android">


  <item android:state_pressed="false">
    <layer-list>
      <item android:right="2dp" android:top="2dp">
        <shape>
          <corners android:radius="3dp" />

          <solid android:color="#e0e0e0" />
        </shape>
      </item>



      <item android:bottom="2dp" android:left="2dp">
        <shape >
          <gradient android:angle="360" android:endColor="#ffffff" android:startColor="#e0e0e0" />

          <stroke android:width="1dp" android:color="#ffffff" />

          <corners android:radius="3dp" />

          <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
      </item>
    </layer-list>
  </item>



  <item android:state_pressed="true">
    <layer-list>
      <item android:right="3dp" android:top="3dp">
        <shape>
          <corners android:radius="3dp" />

          <solid android:color="#bdbdbd" />
        </shape>
      </item>


      <item android:top="3dp" android:right="3dp">
        <shape>
          <gradient android:angle="270" android:endColor="#e0e0e0" android:startColor="#ffffff" />

          <stroke android:width="2dp" android:color="#ffffff" />

          <corners android:radius="3dp" />

          <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
      </item>
    </layer-list>
  </item>
 
</selector>





