

<selector xmlns:android="http://schemas.android.com/apk/res/android">


  <item android:state_pressed="false">
    <layer-list>
      <item android:right="2dp" android:top="2dp">
        <shape android:shape="oval">
          <corners android:radius="30dp" />

          <solid android:color="#d3d3d3" />
        </shape>
      </item>



      <item android:bottom="2dp" android:left="2dp">
        <shape android:shape="oval">
          <gradient android:angle="360" android:endColor="#ffffff" android:startColor="#d3d3d3" />

          <stroke android:width="1dp" android:color="#ffffff" />

          <corners android:radius="30dp" />

          <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>



  <item android:state_pressed="true">
    <layer-list>
      <item android:right="5dp" android:top="5dp">
        <shape android:shape="oval">
          <corners android:radius="30dp" />

          <solid android:color="#000000" />
        </shape>
      </item>


      <item android:top="10dp" android:right="10dp">
        <shape  android:shape="oval">
          <gradient android:angle="270" android:endColor="#d3d3d3" android:startColor="#ffffff" />

          <stroke android:width="1dp" android:color="#ffffff" />

          <corners android:radius="30dp" />

          <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>
 
</selector>




